#!/usr/bin/env bash
set -euo pipefail

user=exu
server="jel01.xpn.ch"
port=22
sshkeypath="$HOME/.ssh/id_ed25519"
# NOTE don't transfer to the storage box directly, leads to mangled file names
# see: https://serverfault.com/a/765951

# unlock ssh key
if ! ssh-add -T "${sshkeypath}.pub" &>/dev/null; then
    ssh-add -q "$sshkeypath"
fi

# NAS: music raw
rsync -uvr --progress --delete "/home/exu/Nextcloud/MusikRaw" "/mnt/nas02"

# NAS: video files
rsync -uvr --progress --delete "/mnt/storage/MediaLibrary/Movies" "/mnt/nas02"
rsync -uvr --progress --delete "/mnt/storage/MediaLibrary/Patreon" "/mnt/nas02"
rsync -uvr --progress --delete "/mnt/storage/MediaLibrary/Shows" "/mnt/nas02"

# NAS: music
rsync -uvrL --progress --delete "/home/exu/Musik" "/mnt/nas02"

# Server: music
rsync -uvrL --progress --delete -e "ssh -i $sshkeypath -p $port" "/home/exu/Musik" "${user}@${server}:/mnt/media"

# Server: video files
rsync -uvr --progress --delete -e "ssh -i $sshkeypath -p $port" "/mnt/storage/MediaLibrary/Movies" "${user}@${server}:/mnt/media"
rsync -uvr --progress --delete -e "ssh -i $sshkeypath -p $port" "/mnt/storage/MediaLibrary/Shows" "${user}@${server}:/mnt/media"

# wait for background jobs
wait

echo "Finished transfering data"
